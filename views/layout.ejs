    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">
                    MicroBlog
                </a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="/">首页</a></li>
                <% if(!user) { %>
                    <li><a href="/login">登陆</a></li>
